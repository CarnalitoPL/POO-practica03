                <MenuItem Header="Regiones" Click="MenuItem_Click"/>
                <MenuItem x:Name="mipaqueteria" Header="Paqueteria" Click="mipaqueteria_Click"/>
                <MenuItem x:Name="miProvedores" Header="Provedores" Click="miProvedores_Click"/>
                <MenuItem x:Name="miTerritorios" Header="Territorios" Click="miTerritorios_Click"/>
                <MenuItem x:Name="miEmpleados" Header="Empleados" Click="miEmpleados_Click" />
                <MenuItem x:Name="miClientes" Header="Clientes" Click="miClientes_Click" />
                
            </MenuItem>
            <MenuItem x:Name="MI_Movimientos" Header="Movimientos">
                <MenuItem x:Name="miEmpleadosTerritorios" Header="Empledo Territorio" Click="miEmpleadosTerritorios_Click" />
